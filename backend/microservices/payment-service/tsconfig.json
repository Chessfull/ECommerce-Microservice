{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS", 
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node", 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "sourceMap": true, 
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"] 
}
